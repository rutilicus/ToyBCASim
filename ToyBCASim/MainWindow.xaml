<Window x:Class="ToyBCASim.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ToyBCASim"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <DockPanel LastChildFill="True">
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="ファイル(_F)">
                <MenuItem Header="開く(_O)" Click="MenuItem_Click_Open" />
                <MenuItem Header="保存(_S)" Click="MenuItem_Click_Save" />
            </MenuItem>
        </Menu>
        <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
            <Canvas x:Name="canvas" 
                    Width="200" 
                    Height="100" 
                    HorizontalAlignment="Left" 
                    VerticalAlignment="Top" 
                    Background="White" 
                    PreviewMouseMove="Canvas_PreviewMouseMove"
                    MouseLeftButtonDown="Canvas_MouseLeftButtonDown"/>
        </ScrollViewer>
    </DockPanel>
</Window>
